#!/bin/sh

# 创建日志文件夹
mkdir -p data/logs

# Maven 打包
bash mvnw clean package
if [ $? -gt 0 ]; then
    echo "maven 构建失败."
    exit
fi

# 启动 agtms-web
if [ -f data/web.pid ]; then
    kill -9 `cat data/web.pid`
    rm data/web.pid
    echo "agtms-web 已停止."
fi
java -jar -Xms2g -Xms2g agtms-parent/agtms-web/target/agtms-web.jar > data/logs/web.log 2>&1 &
echo $! > data/web.pid
echo "agtms-web 启动中..."
sleep 10
echo "agtms-web 已启动."

# 启动 agtms-vue
cd agtms-vue
echo "agtms-vue 启动中..."
npm install
npm run serve
cd ../